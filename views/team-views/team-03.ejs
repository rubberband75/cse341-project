<!DOCTYPE html>
<html>

<head>
  <% include ../partials/header.ejs %>
</head>

<body>
  <% include ../partials/nav.ejs %>

  <div class="jumbotron text-center">
    <div class="container">
      <h1>
        <%= title %>
      </h1>
    </div>
  </div>

  <div class="container">

    <% if(tag) { %>
    <div class="row">
      <h3 style="display: inline-block;">
        <small>Tag:</small> <%= tag %>
      </h3>
      <a type="button" class="btn btn-link" href="?">Clear</a>
      <hr>
    </div>
    <% } %>


    <div class="item-list" style="display: flex; flex-wrap: wrap;">
      <% items.forEach(item=> { %>
        <div class="col-sm-6 col-md-4" style="flex-shrink: 0 !important;">
          <div class="thumbnail">
            <img src="<%= item.imageUrl %>" alt="<%= item.name %>" title="<%= item.name %>">
            <div class="caption">
              <h3>
                <%= item.name %>
              </h3>
              <h4>
                <%= item.price %>
              </h4>
              <p>
                <%= item.description %>
              </p>

              <p>
                <% item.tags.forEach(tag=> { %>
                  <a href="?tag=<%= tag %>" class="btn btn-default btn-sm" role="button" style="border-radius: 2em;"><%= tag %></a>
                <% }); %>
              </p>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

</body>

</html>