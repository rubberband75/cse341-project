<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./partials/head.ejs %>
</head>

<body>
    <% include ./partials/nav.ejs %>

        <div class="container">
            <h2 class="orange-text">
                <%= title %>
            </h2>
            <div class="divider"></div>

            <section class="section">
                <div class="row">
                    <div class="col s12 m5 l4 xl3">
                        <div class="card">
                            <div class="card-image">
                                <img class="materialboxed" src="/project/01/images/<%=user.profilePicture%>">
                            </div>
                            <div class="card-content">
                                <span class="card-title">
                                    <%= user.name %>
                                </span>
                                <p>
                                    <%= user.email %>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="col s12 m6 offset-m1 l7 offset-l1 xl8 offset-xl1">

                        <% include ./partials/flash-errors.ejs %>

                        <div class="row">
                            <div class="section">
                                <h5>Update Your Info</h5>

                                <form class="col s12" action="/project/01/account?_csrf=<%=csrfToken%>" method="POST"
                                    enctype="multipart/form-data">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                    <div class="row">
                                        <div class="input-field col s12">
                                            <div class="file-field input-field">
                                                <div class="btn orange accent-3">
                                                    <span><i class="material-icons left">insert_photo</i>Profile
                                                        Picture</span>
                                                    <input type="file" name="image" placeholder="Profile Picture"
                                                        value="asdf" accept="image/png, image/gif, image/jpeg">
                                                </div>
                                                <div class="file-path-wrapper">
                                                    <input class="file-path validate" type="text">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="input-field col s12">
                                            <input id="name" type="text" name="name" value="<%= user.name %>">
                                            <label for="name">Name</label>
                                        </div>

                                        <div class="input-field col s12">
                                            <input id="email" type="email" name="email" value="<%= user.email %>">
                                            <label for="email">Email</label>
                                        </div>

                                        <button class="btn waves-effect waves-light cyan right" type="submit"
                                            name="action">
                                            <i class="material-icons left">save</i>Save Changes
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <br>
                        <div class="divider"></div>

                        <div class="row">
                            <div class="section">
                                <h5>Change Password</h5>

                                <form class="col s12" action="/project/01/account/update-password" method="POST">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                    <div class="row">
                                        <div class="input-field col s12">
                                            <input id="oldPassword" type="password" name="oldPassword">
                                            <label for="oldPassword">Old Password</label>
                                        </div>

                                        <div class="input-field col s12">
                                            <input id="newPassword" type="password" name="newPassword">
                                            <label for="newPassword">New Password</label>
                                        </div>

                                        <div class="input-field col s12">
                                            <input id="confirmPassword" type="password" name="confirmPassword">
                                            <label for="titconfirmPasswordle">Confrim Password</label>
                                        </div>
                                        

                                        <button class="btn waves-effect waves-light cyan right" type="submit"
                                            name="action">
                                            <i class="material-icons left">save</i>Update Password
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </section>

        </div>

        <% include ./partials/footer.ejs %>
            <script>
            </script>
</body>

</html>