<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./partials/head.ejs %>
        <style>
            .flex-row {
                display: flex;
                flex-flow: row wrap;
            }

            .flex-row .col {
                margin-left: 0 !important;
            }
        </style>
</head>

<body>
    <% include ./partials/nav.ejs %>

        <div class="container">
            <h2 class="orange-text">Shop</h2>

            <div class="divider"></div>

            <div class="row flex-row">
                <% products.forEach(product=> { %>
                    <div class="col s12 m6 l4">
                        <div class="card">
                            <div class="card-image">
                                <a href="/project/01/product/<%= product.id %>">
                                    <img src="<%= product.imageUrl %>">
                                </a>

                                <% if (isAuthenticated) { %>
                                    <form action="/project/01/cart/" method="POST">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <input type="hidden" name="productId" value="<%= product._id %>">
                                        <button type="submit"
                                            class="btn-floating btn-large halfway-fab waves-effect waves-light red lighten-1"><i
                                                class="material-icons">add_shopping_cart</i></button>
                                    </form>
                                    <% } %>

                            </div>
                            <div class="card-content" style="padding: 12px 24px;">
                                <h5>
                                    <%= product.title %>
                                </h5>
                                <p>
                                    <%= product.description %>
                                </p>
                            </div>
                            <div class="card-action">
                                <h5 style="text-align: right; margin: 0;"> $<%= product.price %>
                                </h5>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>

        <% include ./partials/footer.ejs %>
            <script>
            </script>
</body>

</html>