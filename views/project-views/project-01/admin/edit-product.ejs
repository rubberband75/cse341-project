<!DOCTYPE html>
<html>

<head>
  <% include ../../../partials/header.ejs %>
</head>

<body>
  <% include ../../../partials/nav.ejs %>
    <% include ../partials/project01nav.ejs %>



      <div class="jumbotron text-center">
        <div class="container">
          <h1>
            <%= title %>
          </h1>
        </div>
      </div>

      <div class="container">

        <form class="product-form"
          action="/project/01/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
          <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" type="text" name="title" id="title"
              value="<% if (editing) { %><%= product.title %><% } %>">
          </div>
          <div class="form-group">
            <label for="imageUrl">Image URL</label>
            <input class="form-control" type="text" name="imageUrl" id="imageUrl"
              value="<% if (editing) { %><%= product.imageUrl %><% } %>">
          </div>
          <div class="form-group">
            <label for="price">Price</label>
            <input class="form-control" type="number" name="price" id="price" step="0.01"
              value="<% if (editing) { %><%= product.price %><% } %>">
          </div>
          <div class="form-group">
            <label for="description">Description</label><br>
            <textarea name="description" id="description"
              rows="10"><% if (editing) { %><%= product.description %><% } %></textarea>
          </div>
          <% if (editing) { %>
            <input class="form-control" type="hidden" value="<%= product.id %>" name="productId">
            <% } %>

              <button class="btn btn-primary" type="submit">
                <% if (editing) { %>Update Product<% } else { %>Add Product<% } %>
              </button>
        </form>

        <br>

        <% if (editing) { %>
          <form action="/project/01/admin/delete-product/<%= product.id %>" method="POST">
            <button class="btn btn-danger" type="submit">Delete Product</button>
          </form>
          <% } %>

            <br>
            <a class="btn btn-link" href="/project/01/admin">Cancel</a>

      </div>

</body>

</html>